<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/picker_grid_state_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/picker_grid_state_focused" />
        </shape>
    </item>
    <item android:drawable="@android:color/transparent" />

    <!-- as below added by xingq on 2017/12/04. -->
    <item android:drawable="@color/picker_image_selected" android:state_selected="true"/>
    <item android:drawable="@color/picker_image_selected" android:state_enabled="false"/>
</selector>