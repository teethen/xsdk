<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionBarSize">@dimen/actionBarSize48</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:listDivider">@drawable/divider_line</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OverflowMenuStyle">
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="LoadingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowContentOverlay">@null</item><!--内容覆盖-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item><!--窗口样式Dialog-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
　   </style>

    <style name="SpinnerStyle">
        <item name="colorAccent">@color/darkGray</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:animationCache">true</item>
    </style>

    <!-- FontSizeTheme Begin -->
    <style name="FontSmallTheme">
        <item name="font_size_smaller">@dimen/text_size_smaller</item>
        <item name="font_size_small">@dimen/text_size_smaller</item>
        <item name="font_size_default">@dimen/text_size_small</item>
        <item name="font_size_medium">@dimen/text_size14</item>
        <item name="font_size_large">@dimen/text_size_default</item>
    </style>
    <style name="FontDefaultTheme">
        <item name="font_size_smaller">@dimen/text_size_small</item>
        <item name="font_size_small">@dimen/text_size13</item>
        <item name="font_size_default">@dimen/text_size_default</item>
        <item name="font_size_medium">@dimen/text_size18</item>
        <item name="font_size_large">@dimen/text_size_medium</item>
    </style>
    <style name="FontMediumTheme">
        <item name="font_size_smaller">@dimen/text_size13</item>
        <item name="font_size_small">@dimen/text_size15</item>
        <item name="font_size_default">@dimen/text_size18</item>
        <item name="font_size_medium">@dimen/text_size_medium</item>
        <item name="font_size_large">@dimen/text_size_large</item>
    </style>
    <style name="FontLargeTheme">
        <item name="font_size_smaller">@dimen/text_size15</item>
        <item name="font_size_small">@dimen/text_size18</item>
        <item name="font_size_default">@dimen/text_size_medium</item>
        <item name="font_size_medium">@dimen/text_size_large</item>
        <item name="font_size_large">@dimen/text_size_largest</item>
    </style>
    <!-- FontSizeTheme End -->

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


</resources>
