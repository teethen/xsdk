<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--liteview-->
    <declare-styleable name="NineGridImageView">
        <attr format="dimension" name="singleImgSize"/>
        <attr format="dimension" name="imgGap"/>
        <attr format="integer" name="maxSize"/>
        <attr format="enum" name="showStyle">
            <enum name="grid" value="0"/>
            <enum name="fill" value="1"/>
        </attr>
    </declare-styleable>

    <!--complex-->
    <declare-styleable name="NineGridView">
        <attr name="ngv_singleImageSize" format="dimension"/>
        <attr name="ngv_singleImageRatio" format="float"/>
        <attr name="ngv_gridSpacing" format="dimension"/>
        <attr name="ngv_maxSize" format="integer"/>
        <attr name="ngv_mode" format="enum">
            <enum name="fill" value="0"/>
            <enum name="grid" value="1"/>
        </attr>
    </declare-styleable>
</resources>